{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error", 
    "semi": ["error", "never"], 
    "quotes": ["error", "single"], 
    "no-unused-vars": "warn", 
    "@typescript-eslint/no-unused-vars": ["warn"]
  }
}
